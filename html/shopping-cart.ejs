<body>
    <div class = "HomePage-TABS">
    
        <fieldset id = "no-border" class = "tab">
        <div class = "preset tab">
            <button id = "non"><a href = "/Presets">Presets</a></button><!--ADD LINK TO VOCAL PRESET PAGE-->       
        </div>
        
    </fieldset>

    <fieldset id = "no-border" class = "tab">
        <div class = "Beats tab">
            <button id = "non"><a href = "/Beats">Beats</a></button><!--ADD LINK TO BEATS PAGE-->
           
        </div>
    </fieldset>

    <fieldset id = "no-border" class = "tab">
        <div class = "Mixing-Music tab">
            <button id = "non"><a href = "/Music-Mixing">Mixing</a></button><!--ADD LINK TO MUSIC MIXING PAGE-->
       
        </div>
    </fieldset>

    
        <fieldset id = "no-border" class = "tab homepagefield">
            <div class = "Home-Page tab">
                <button id = "non"><a href = "/" title = "HomePage"><span><img src = '/Images/Home icon White.jpg' id = 'homeIcon'></span></a></button><!--ADD LINK TO FIND FEATURESPAGE-->
                
            
            </div>
            </fieldset>
            <fieldset id = "no-border" class = "tab">
                <div class = "Home-Page tab">
                    <button id = "non"><a href = "/DrumKits" title = "DrumKits"><span>Drum-Kits</span></a></button><!--ADD LINK TO FIND FEATURESPAGE-->
                
                </div>
                </fieldset>
            <div class = "Inbox inline right" id = 'Inbox'>
                <fieldset id = "no-border" class = "inline tab">
                        <button id = "non" class = 'Inbox'><span>&#9993;</span></a></button><!--ADD LINK TO BEATS PAGE-->
                    </fieldset>
                    </div>
                    <%- include("../Partials/NotiNum.ejs") %>
                    <%- include('../Partials/Cartnum.ejs') %>
   
            <div class = "Shopping-Cart inline">
                <fieldset id = "border" class = "inline tab shopcartfield">
                        <button id = "preset"><a href = "/shopping-cart"><span><img src = '/Images/ShopCart White.jpg' id = 'cartIcon'> </span></a></button><!--ADD LINK TO BEATS PAGE-->
                    </fieldset>
                    </div>
            
        
    
    <div class = "account inline">
            <fieldset id = "no-border" class = "tab">
                <%-include('../Partials/PfpAcc.ejs') %>
            </fieldset>
        </div>
    </div>
    <div class = "products">
        <%- include("../Partials/MailBox.ejs") %>
        <%- include('../Partials/NotLogged.ejs')%>
        <div id = 'BoughtVPPurchaseCon' class = 'aligner'>
            <p>Successfully Purchased!</p>
            <p>Go to the Purchases tab in the Account Page</p>
            <p>To Download Your Purchases </p>
        </div>
<h1 id = "shopcartheader">Shopping Cart</h1>


<fieldset class = "caption">
<p id = "capprice">Items</p>
</fieldset>

<fieldset class = "caption2">
<p>Price</p>
</fieldset>



<fieldset id = "box">
    <fieldset class="none">
        <% var tot = 0 %>
         <% Orders.forEach(Orders => { %>
            <% if(Orders.user == User) { %>
                <% tot = Orders.price + tot%>
                <% } %>
            <% }) %>
    <p id = "totalCost">Total: $<%= tot %>.00</p><!--TOTAL COST-->
</fieldset>
<br>
    <button id = "buynowbutton">Buy Now</button>
    </fieldset>

<fieldset id = 'cart'>
    <% var dom = 0%>
    <% if(User == undefined){ %>
        <div class = 'aligner'>
       <% dom++%>
             <h2>Please Login to View Your Shopping Cart</h2>
         </div>
       <% } %>
    <% if(Orders.length > 0) { %>
        <% var x = 0 %>
        <% var y = Orders.length %>
        
        <% var cic = -1%>
        <% Orders.forEach(Orders => { %>
            <% x++ %>
        
            <% if(Orders.user == User) { %>
                <% cic++ %>
                <div class = 'flexContainer'>
                <fieldset class = 'lightfield leftspace'>
                    <img src = '<%= Orders.src %>' class = 'smol'>
                    <p class = 'vocalpreset' id = 'vocalpreset' value = '<%= Orders.VocalPreset %>'><%= Orders.VocalPreset %></p>
                    <p class = 'daw' id = 'daw' value = '<%= Orders.DAW %>'><%= Orders.DAW %></p>
                </fieldset>
                <fieldset class = 'lightfield aligner'>
                    <div class = 'flexContainer'>
                    <div class = 'topsp'>
                    <p class = 'price inline'>$<%= Orders.price %>.00</p>
                    </div>
                    <div class = 'topsp'>
                    <button class = 'delete' data-cart = '<%= Orders._id %>' id = 'CartItem_<%=cic %>'>X</button>
                </div>
            </div>
                </fieldset>
            </div>
                
                <% } else if(x == y && cic == -1 && dom == 0){ %>
               <div class = 'aligner'>
              
                    <h2>No Items Are In Your Shopping Cart</h2>
                </div>
              <% } %>
                <% }) %>
                <% } %>
                    
</fieldset>
<div id = 'height'>

</div>
</div>

<script src = "js/shopping-cart.js"></script>
</body>
</html>